@page
@model XLibApp.Pages.BookList.EditModel
@{
    ViewData["Title"] = "Edit";
}
<br />
<h2 class="text-info">Create New Book</h2>
<br />
<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger " asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Book.Id" />
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Title" class="form-control" />
            </div>
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            <span asp-validation-for="Book.Author" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Type"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Type" class="form-control" />
            </div>
            <span asp-validation-for="Book.Type" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Quantity"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Quantity" class="form-control" />
            </div>
            <span asp-validation-for="Book.Quantity" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3"><a asp-page="Index" class="btn btn-success form-control">Back</a> </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}