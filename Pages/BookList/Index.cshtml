@page
@model XLibApp.Pages.BookList.IndexModel
@{
    ViewData["Title"] = "Book List";
}
<br />
<div class="container row p-0 m-0" >
    <div class="text-center">
        <img src="~/css/images/Xlib2.png" />
    </div>
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Book</a>
    </div>



    <div class="col-12 border p-3 mt-5">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">

                    <tr class="table-secondary">

                        <th>
                            <label asp-for="Books.FirstOrDefault().Title"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                            @*  @Html.DisplayNameFor(m=>m.Books.FirstOrDefault().Author)*@
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Type"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Quantity"></label>
                        </th>
                        <th></th>

                    </tr>
                    @foreach (var item in Model.Books)
                    {
                <tr>

                    <td>
                        @Html.DisplayFor(m => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Quantity)
                    </td>

                    <td align="right">
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                        <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                    </td>
                </tr>
                    }
                </table>
            }
            else
            {
                <p>No Books Available...</p>
            }
        </form>

    </div>

    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-striped table-bordered" style="width:90%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th> Author</th>
                    <th> Type</th>
                    <th> Quantity</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{ 
    <script src="~/js/bookList.js"></script>
}